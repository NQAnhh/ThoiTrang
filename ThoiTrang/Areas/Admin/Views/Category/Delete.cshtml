@model MyShop.Models.Category

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <!-- Main content -->
    <section class="content my-2">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-md-6">
                            <strong>XÁC NHẬN XÓA DANH MỤC SẢN PHẨM</strong>
                        </div>
                        <div class="col-md-6 text-right">
                            <a href="@Url.Action("Edit", "Category", new { id = Model.Id })" class="btn btn-sm btn-success"><i class="fas fa-edit">Cập nhật</i></a>
                            <a href="@Url.Action("Index", "Category")" class="btn btn-sm btn-info"><i class="fa-solid fa-rotate-left"></i>Về danh sách</a>

                            <button class="btn btn-sm btn-danger" type="submit" ><i class="fa-solid fa-trash-alt">Xóa</i></button>
                        </div>
                    </div>
                }
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <tr>
                        <th style="width:120px">Tên trường</th>
                        <th>Nội dung</th>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Name)</td>
                        <td>@Html.DisplayFor(model => model.Name)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Slug)</td>
                        <td>@Html.DisplayFor(model => model.Slug)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.ParentId)</td>
                        <td> @Html.DisplayFor(model => model.ParentId)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Orders)</td>
                        <td>@Html.DisplayFor(model => model.Orders)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.MetaDesc)</td>
                        <td> @Html.DisplayFor(model => model.MetaDesc)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.MetaKey)</td>
                        <td>@Html.DisplayFor(model => model.MetaKey)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Create_By)</td>
                        <td>@Html.DisplayFor(model => model.Create_By)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.CreateAt)</td>
                        <td>@Html.DisplayFor(model => model.CreateAt)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Update_By)</td>
                        <td>@Html.DisplayFor(model => model.Update_By)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.UpdateAt)</td>
                        <td>@Html.DisplayFor(model => model.UpdateAt)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Status)</td>
                        <td>@Html.DisplayFor(model => model.Status)</td>
                    </tr>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
